{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist",
    "noEmit": false
  },
  "include": [
    "server/**/*.ts",
    "model/**/*.ts",
    "common/**/*.ts",
    "utils/**/*.ts",
    "server/**/*.json",
    "model/**/*.json",
    "common/**/*.json",
    "utils/**/*.json"
  ],
  "exclude": ["node_modules", "**/__tests__", "types"]
}